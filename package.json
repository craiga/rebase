{
  "name": "rebase",
  "version": "1.0.0",
  "private": true,
  "description": "Rebase pull requests in a repository",
  "main": "lib/main.js",
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json",
    "build-checkout": "npm install --prefix node_modules/checkout && npm run build --prefix node_modules/checkout",
    "build": "tsc && ncc build",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "jest unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peter-evans/rebase.git"
  },
  "keywords": [
    "actions",
    "pull",
    "rebase"
  ],
  "author": "Peter Evans",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peter-evans/rebase/issues"
  },
  "homepage": "https://github.com/peter-evans/rebase",
  "dependencies": {
    "@actions/core": "1.2.6",
    "@actions/io": "1.0.2",
    "@octokit/graphql": "4.6.1",
    "checkout": "github:actions/checkout#v2.3.4",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/jest": "26.0.21",
    "@types/node": "14.14.35",
    "@typescript-eslint/parser": "4.19.0",
    "@vercel/ncc": "0.27.0",
    "eslint": "7.22.0",
    "eslint-plugin-github": "4.1.2",
    "eslint-plugin-jest": "24.3.2",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "js-yaml": "4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "26.5.4",
    "typescript": "4.2.3"
  }
}
